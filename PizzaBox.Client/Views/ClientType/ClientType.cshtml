@{
    ViewData["Title"] = "Client Type";
}

@model PizzaBox.Client.Models.ClientTypeModel

<section class="container-fluid">
    <div class="row justify-content-center">
        <p class="col">Select whether you are a customer or owner.</p>
    </div>
    <hr>
    <div class="row justify-content-center">
        @Html.ValidationMessageFor(m => m.ClientType, null, new { @class = "error-message" })
    </div>
    <div class="row justify-content-center">
        <form action="/clienttype/check" method="POST" class="col">
            @Html.AntiForgeryToken()
            <div class="form-check">
                <input class="form-check-input" type="radio" value="customer" asp-for="ClientType">
                <label class="form-check-label" for="customer">Customer</label>
            </div>
            <div class="input-group">
                <span class="input-group-text">Name</span>
                <input type="text" class="form-control" asp-for="CustomerName">
            </div>
            <p class="error-message">@Model.ErrorMessage</p>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="owner" asp-for="ClientType">
                <label class="form-check-label" for="owner">Owner</label>
            </div>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>